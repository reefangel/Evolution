<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/StdDimmingContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/EvolutionWhite"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip" >

    <com.reefangel.evolution.ProgressView
        android:id="@+id/daylightdimming1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.reefangel.evolution.ProgressView
        android:id="@+id/actinicdimming1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <com.reefangel.evolution.ProgressView
        android:id="@+id/daylightdimming2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.reefangel.evolution.ProgressView
        android:id="@+id/actinicdimming2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>