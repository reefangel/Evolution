            android:id="@+id/IOChannel3Label"
            style="@style/EvolutionATO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="I/O Channel 3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/iochannel4"
            style="@style/EvolutionButtonDisplay"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ato_off" />

        <TextView
            android:id="@+id/IOChannel4Label"
            style="@style/EvolutionATO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="I/O Channel 4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/iochannel5"
            style="@style/EvolutionButtonDisplay"
