<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"  >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="@dimen/expansionscrollingbar"
                android:layout_height="wrap_content"
                android:layout_weight="0" >
                <LinearLayout
                    style="@style/EvolutionRelayWidget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" >
                    </TabWidget>
                </LinearLayout>
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center" >

                <LinearLayout
                    android:id="@+id/mainbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >

                    <TableLayout
                        style="@style/EvolutionRelayBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@drawable/relay_box_bk"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <include
                                android:id="@+id/Relay1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                layout="@layout/relaybuttontopcontainer" />

                            <include
                                android:id="@+id/Relay3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                layout="@layout/relaybuttontopcontainer" />

                            <include
                                android:id="@+id/Relay5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                layout="@layout/relaybuttontopcontainer" />

                            <include
                                android:id="@+id/Relay7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                layout="@layout/relaybuttontopcontainer" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <include
                                android:id="@+id/Relay2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                layout="@layout/relaybuttonbottomcontainer" />

                            <include
                                android:id="@+id/Relay4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                layout="@layout/relaybuttonbottomcontainer" />

                            <include
                                android:id="@+id/Relay6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                layout="@layout/relaybuttonbottomcontainer" />

                            <include
                                android:id="@+id/Relay8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                layout="@layout/relaybuttonbottomcontainer" />
                        </LinearLayout>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expbox1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expbox2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expbox3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expbox4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expbox5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expbox6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expbox7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expbox8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:baselineAligned="true" >
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>